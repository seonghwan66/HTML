create table product(
	number int not null primary key,
	id varchar(20) not null,
	product varchar(20) not null,
	quantity int not null,
	date datetime not null
);

insert into product values
	(1, '김성환', '애플', 5, now()),
	(2, '조준혁', '성환', 5, now()),
	(3, '김민서', '펩시', 3, now()),
	(4, '동아대', '부산', 2, now());
